<!--<h2>Edit <%= resource_name.to_s.humanize %></h2>-->
<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<h2>ユーザー情報を編集する</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
		<%= f.error_messages! %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <!-- 名前入力用のフィールドを追加 -->
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :新しいパスワード %> <i>（<%= @minimum_password_length %>文字以上入力してください。）</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワードを変更しない場合は、入力の必要はありません。" %>
    <% if @minimum_password_length %>
      <br />
      
    <% end %>
  </div>

  <div class="field">
    <%= f.label :パスワードの再確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "変更したいパスワードを再入力してください。" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: "アカウントの編集を行う場合は、現在のパスワードを入力してください。" %>
  </div>

  <div class="actions">
    <%= f.submit "編集する", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p><%= button_to "削除する", registration_path(resource_name), data: { confirm: "本当に削除してもいいですか？" }, method: :delete, class: 'btn btn-default btn-sm btn btn-danger' %></p>

<%= link_to "戻る", :back %>

  </div>
</div>