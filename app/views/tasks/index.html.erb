<p id="notice" class="bg-info"><%= notice %></p>

<h1>タスク一覧</h1>

<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>ユーザー</th>
      <th>タスク</th>
      <th>締め切り</th>
      <th>担当</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <th scope="row"><%= @id = @id + 1 %></th>
        <td ><%= task.user.name %></td>
        <td><%= task.title %></td>
        <td><%= task.deadline.strftime("%Y年%m月%d日") %></td>
        <td><%= task.charge.name %></td>
        <td><%= task.status %></td>
        <td><%= link_to '詳細', task, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to '編集', edit_task_path(task), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '削除しますか?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'タスク依頼一覧を確認する',  submit_requests_path, class: 'btn btn-default btn-xl' %>
<%= link_to '新規作成', new_task_path, class: 'btn btn-default btn-xl' %>
