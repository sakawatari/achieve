<div class="container">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
    <% if user.id != current_user.id %>
      <div class="container-child follow-container col-md-2 col-sm-4 col-xs-6">
        <%= profile_img(user) %>
        <%= link_to user.name, user_path(user), class: 'btn btn-xs btn-warning btn-block' %>
        <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: 'btn btn-xs btn-success btn-block' %>
        <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
      </div>
    <% end %>
  <% end %>
</div>
