<p id="notice" class="bg-info"><%= notice %></p>

<h1>タスク引受一覧</h1>

<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>依頼者</th>
      <th>タスク</th>
      <th>メッセージ</th>
      <th>担当者</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submit_requests.each do |submit_request| %>
      <tr>
        <th scope="row"><%= @id = @id + 1 %></th>
        <td><%= submit_request.user.name %></td>
        <td><%= submit_request.task.title %></td>
        <td><%= submit_request.message %></td>
        <td><%= submit_request.request_user.name %></td>
        <td><%= submit_request.status %></td>
        <td><%= link_to '詳細', submit_request, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to '承認する', approve_submit_request_path(submit_request, submit_request: {status: 2}), method: :patch, data: { confirm: '承認しますか?' }, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to '却下する', reject_submit_request_path(submit_request, submit_request: {status: 9}), method: :patch, data: { confirm: '却下しますか?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'タスク依頼一覧を確認する',  submit_requests_path, class: 'btn btn-default btn-xl' %>
<%= link_to 'タスクを依頼する', new_submit_request_path, class: 'btn btn-default btn-xl' %>
