<p id="notice" class="bg-info"><%= notice %></p>

<h1>タスク依頼一覧</h1>

<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>ユーザー</th>
      <th>タスク</th>
      <th>メッセージ</th>
      <th>担当者</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submit_requests.each do |submit_request| %>
      <tr>
        <th scope="row"><%= @id = @id + 1 %></th>
        <td><%= submit_request.user.name %></td>
        <td><%= submit_request.task.title %></td>
        <td><%= submit_request.message %></td>
        <td><%= submit_request.request_user.name %></td>
        <td><%= submit_request.status %></td>
        <td><%= link_to '詳細', submit_request, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to '編集', edit_submit_request_path(submit_request), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to '削除', submit_request, method: :delete, data: { confirm: '削除しますか？' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'タスク引受一覧を確認する',  inbox_submit_requests_path, class: 'btn btn-default btn-xl' %>
<%= link_to 'タスクを依頼する', new_submit_request_path, class: 'btn btn-default btn-xl' %>
